  // Logo mood changer based on time of day
  function updateLogoMood() {
    const hour = new Date().getHours();
    let activeMood = "working";
    let moodText = "ƒêang l√†m vi·ªác";

    if (hour >= 5 && hour < 10) {
      activeMood = "sleepy";
      moodText = "üò¥ Bu·ªìn ng·ªß qu√°...";
    } else if (hour >= 10 && hour < 14) {
      activeMood = "hungry";
